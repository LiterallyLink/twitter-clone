# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=twitter_clone
DB_USER=twitter
DB_PASSWORD=twitter_dev_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=5b41fa487a2523190b1f0827830e88467c7499d84d3dcc349ed9405f1a502fe5
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=30d

# CORS Configuration
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration
# For development, leave these empty to use Ethereal Email (test email service)
# For production, configure your SMTP server
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=noreply@twitterclone.com

# Security Configuration
# Set to 'true' to require email verification before login
REQUIRE_EMAIL_VERIFICATION=false

# CSRF Protection
# Generate a strong random secret for CSRF token validation
# IMPORTANT: Change this in production!
CSRF_SECRET=ffd4922d9a2a28ac47a3dd642a2b5ee684774a10f91b8ab35f5f78d951be63bf

# Google reCAPTCHA Configuration
# Get your keys from: https://www.google.com/recaptcha/admin
# Use reCAPTCHA v3 for invisible bot protection
# IMPORTANT: Keep SECRET_KEY private! Never expose it to the frontend.
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here
RECAPTCHA_SCORE_THRESHOLD=0.5

# Twilio SMS Configuration (for SMS 2FA)
# Get your credentials from: https://console.twilio.com
# Sign up for free trial: https://www.twilio.com/try-twilio
# Free trial includes $15 credit (~500 SMS messages)
# IMPORTANT: Keep these credentials private! Never commit to git.
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Note: If Twilio credentials are not provided, SMS 2FA will log codes to console
# This is useful for development/testing without setting up Twilio